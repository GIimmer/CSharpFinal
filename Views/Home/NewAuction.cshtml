@model AuctionValidator
<div class='container'>
    <div class='row mt-3'>
        <h2 class='col-6'>New Auction</h2>
        <a href='/CurrentAuctions' class='col-3'>Home</a>
        <a href='/process/logout' class='col-3'>Logout</a>
    </div>
    <div class='row mt-4'>
        <form action='/process/new/auction' method='post' class='form-group'>
            <div class='row'>
                <div class='col-6'>
                    <label for='ProductName'>Product Name</label>
                    <input type='text' asp-for='ProductName' class='form-control'>
                    <span class='text-danger' asp-validation-for='ProductName'></span>

                    <label for='ProductDesc'>Description</label>
                    <textarea rows='5' asp-for='ProductDesc' class='form-control'></textarea>
                    <span class='text-danger' asp-validation-for='ProductDesc'></span>
                    
                    <button type='submit' value='submit' class='btn offset-3 mt-4 btn-primary'>Create Auction</button>
                </div>
                <div class='col-6'>
                    <label for='CurrentBid'>Starting Bid</label>
                    <input type='number' min=0 step='0.01' asp-for='CurrentBid' class='form-control'>
                    <span class='text-danger' asp-validation-for='CurrentBid'></span>

                    <label for='EndDate'>End Date</label>
                    <input type='date' asp-for='EndDate' class='form-control'>
                    <span class='text-danger' asp-validation-for='EndDate'></span>
                </div>         
            </div>
        </form>
    </div>
</div>