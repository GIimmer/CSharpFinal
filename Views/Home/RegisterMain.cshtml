@model RegisterValidator
<div class="container">
    <div class="row">
        @await Html.PartialAsync("LoginPartial")
        <div class="col-12">
            <h3 class='mt-3'>Register!</h3>
            <form action='/process/register' method='post' class='form-group'>
                <div class='row'>
                    <div class='col-5'>
                        <label for='UserName' class="mt-34">Username:</label>
                        <input type='text' asp-for='UserName' class="rounded col-6 form-control">
                        <div><span class='text-danger' asp-validation-for='UserName'></span></div>

                        <label for='Password' class="mt-2">Password:</label>
                        <input type='password' asp-for='Password' class="rounded col-6 form-control">
                        <span class='text-danger' asp-validation-for='Password'></span>

                        <label for='ConfirmPass' class="mt-2">Confirm Password:</label>
                        <input type='password' asp-for='ConfirmPass' class="ml-0 mr-0 rounded col-6 form-control">
                        <span class='text-danger' asp-validation-for='ConfirmPass'></span>
                    </div>
                    <div class='col-5'>
                        <label for='FirstName' class="mt-3">First name:</label>
                        <input type='text' asp-for='FirstName' class="rounded col-6 form-control">
                        <span class='text-danger' asp-validation-for='FirstName'></span>

                        <label for='LastName' class="mt-2">Last name:</label>
                        <input type='text' asp-for='LastName' class="rounded col-6 form-control">
                        <span class='text-danger' asp-validation-for='LastName'></span>

                        <button type='submit' value='submit' class="btn col-3 mt-3 offset-3 btn-success">Register!</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>  